{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "checkJs": true,
    "allowJs": true,
    "paths": {
      "https://esm.sh/codemirror": ["./node_modules/codemirror"],
      "https://esm.sh/@codemirror/*": ["./node_modules/@codemirror/*"],
      "https://esm.sh/@lezer/*": ["./node_modules/@lezer/*"]
    }
  },
  "include": ["public/**/*"]
}