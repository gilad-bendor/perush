{
  "name": "hebrew-markdown-editor",
  "version": "1.0.0",
  "description": "Hebrew Markdown RTL Editor with file browser",
  "scripts": {
    "dev": "bun run --watch ./src/* --watch ./public/* src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist",
    "start": "bun run dist/server.js"
  },
  "devDependencies": {
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.39.4",
    "@lezer/highlight": "^1.2.3",
    "@types/bun": "^1.2.22",
    "@types/node": "^20.0.0",
    "codemirror": "^6.0.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bun": "^1.0.0"
  }
}